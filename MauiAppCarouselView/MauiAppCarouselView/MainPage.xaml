<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppCarouselView.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppCarouselView"
    x:DataType="local:ViewModel">

    <Grid RowDefinitions="Auto,*">

        <Grid Grid.Row="0" RowDefinitions="40,1">
            <Label
                Grid.Row="0"
                HorizontalOptions="Center"
                Text="Hello world"
                VerticalOptions="Center" />
            <BoxView
                Grid.Row="1"
                HeightRequest="1"
                Color="Black" />
        </Grid>

        <CarouselView Grid.Row="1" ItemsSource="{Binding ItemList}">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <BoxView
                            HeightRequest="100"
                            HorizontalOptions="Center"
                            WidthRequest="100"
                            Color="Blue" />
                        <Label HorizontalOptions="Center" Text="{Binding .}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

    </Grid>

</ContentPage>
