<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppKeyboardNumeric.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout>

        <Entry Text="Default keyboard" />

        <Entry Keyboard="Numeric" Text="Numeric keyboard" />

        <Entry
            IsPassword="True"
            Keyboard="Numeric"
            Text="Numeric password" />

        <Button Clicked="Button_OnClicked" Text="Display prompt" />

    </VerticalStackLayout>

</ContentPage>
